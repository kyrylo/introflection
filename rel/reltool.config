%% -*- mode: erlang -*-
{sys, [
    {lib_dirs, [
        "../..",
        "../deps"
    ]},
    {erts, [
        {vsn, "6.3"},
        {mod_cond, derived},
        {app_file, strip}
    ]},
    {app_file, strip},

    {rel, "introflection", "1", [
        kernel,
        stdlib,
        sasl,
        mnesia,
        gproc,
        cowboy,
        rmarshal,
        jiffy,
        lager,
        introflection
    ]},

    {rel, "start_clean", "1", [
        kernel,
        stdlib
    ]},

    {boot_rel, "introflection"},
    {profile, embedded},
    {debug_info, strip},
    {excl_archive_filters, [".*"]}, %% Do not archive built libs
    {excl_sys_filters, [
        "^bin/(?!start_clean.boot)",
        "^erts.*/bin/(dialyzer|typer)",
        "^erts.*/(doc|info|include|lib|man|src)"
    ]},
    {excl_app_filters, ["\.gitignore"]},

    %% Dependencies
    {app, jiffy,    [{incl_cond, include}]},
    {app, gproc,    [{incl_cond, include}]},
    {app, cowboy,   [{incl_cond, include}]},
    {app, rmarshal, [{incl_cond, include}]},
    {app, lager,    [{incl_cond, include}]},

    %% Application
    {app, introflection, [{incl_cond, include}]}
]}.

{target_dir, "introflection"}.

{overlay, [
    {mkdir, "log/sasl"},
    {copy, "files/erl", "\{\{erts_vsn\}\}/bin/erl"},
    {copy, "files/nodetool", "\{\{erts_vsn\}\}/bin/nodetool"},
    {copy, "files/introflection", "bin/introflection"},
    {copy, "files/introflection.cmd", "bin/introflection.cmd"},
    {copy, "files/start_erl.cmd", "bin/start_erl.cmd"},
    {copy, "files/install_upgrade.escript", "bin/install_upgrade.escript"},
    {copy, "files/sys.config", "releases/\{\{rel_vsn\}\}/sys.config"},
    {copy, "files/vm.args", "releases/\{\{rel_vsn\}\}/vm.args"}
]}.
